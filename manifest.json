{
    "name": "Memonator",
    "version": "1.0",
    "description": "Bedzie memicznie!",
	"manifest_version": 2,
	"background": {
		"scripts": [
			"lib/jquery-3.5.1.js",
			"const/actions.js",
			"classes/Connection.js",
		  	"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": [
				"css/style.css",
				"css/bootstrap.css"
			],
			"js": [
				"lib/jquery-3.5.1.js",
				"lib/bootstrap.js",
				"const/actions.js",
				"memonator.js"
			]
		}
	],
	"permissions": [
		"cookies",
		"*://*/"
	]
  }